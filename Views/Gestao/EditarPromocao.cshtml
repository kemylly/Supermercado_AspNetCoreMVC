@model supermercado.DTO.PromocaoDTO
@{
    Layout = "_LayoutAdmin";
}

<h2>Editar promoção</h2>
<hr/>

<form method="POST" asp-controller="Promocoes" asp-action="Atualizar">
    <input type="hidden" asp-for="Id">

    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome da promocao"><br>
    <span asp-validation-for="Nome"></span>

    <label asp-for="ProdutoID">Produto</label>
    <select class="form-control" asp-for="ProdutoID" asp-items='@(new SelectList(@ViewBag.Produtos,"Id","Nome"))'></select>
    <br>

    <label asp-for="Porcentagem">Porcentagem</label>
    <input type="number" min="0" max="100" asp-for="Porcentagem" placeholder="15%" class="form-control">
    <br>
    <button class="btn btn-success">Atualizar</button>
</form>